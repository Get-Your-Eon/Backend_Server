# .env.template
# 템플릿 파일입니다. 민감한 값은 절대 이 파일에 채우지 마시고,
# Render Dashboard의 Environment Variables(Secrets)로 등록하세요.

# -----------------------
# 필수 (Render에서 등록할 것)
# -----------------------
# 데이터베이스 연결 문자열 (예: postgresql://user:pass@host:5432/dbname)
DATABASE_URL=

# Redis 접속 정보
REDIS_HOST=
REDIS_PORT=
REDIS_PASSWORD=

# 프론트엔드에서 요청 시 사용할 API 키(콤마로 다중 등록 가능)
# 예: FRONTEND_API_KEYS=localtestkey,stagingkey,prodkey
FRONTEND_API_KEYS=

# 외부 충전소 API 기본 URL
EXTERNAL_STATION_API_BASE_URL=
# 외부 충전소 API Key (민감)
EXTERNAL_STATION_API_KEY=
# 인증 방식: header 또는 query
EXTERNAL_STATION_API_AUTH_TYPE=header
# 헤더명(예: Authorization 또는 X-API-KEY)
EXTERNAL_STATION_API_KEY_HEADER_NAME=Authorization
# 외부 API 호출 타임아웃(초)
EXTERNAL_STATION_API_TIMEOUT_SECONDS=15

# 애플리케이션/보안 관련
SECRET_KEY=
ENVIRONMENT=production
DOCKER_ENV=true

# CORS 허용 도메인(콤마 구분)
ALLOWED_ORIGINS=

# 관리자(옵션)
ADMIN_CREDENTIALS=
ADMIN_MODE=false

# 기타
# (Render에서 로그 레벨이나 추가 설정을 환경변수로 주입하려면 여기에 이름을 추가)

# End of file
